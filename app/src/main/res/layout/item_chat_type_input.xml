<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="presenter"
            type="com.leap.mars.presenter.chat.ChatTypeActivity.Presenter"/>

        <import type="com.leap.mars.presenter.chat.ChatTypeActivity"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:text="07-02  02:00"
            android:textColor="@color/coolGrey"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:background="@mipmap/chatto_bg_normal"
                android:gravity="center_vertical"
                android:text="哈哈...欢迎..."/>


            <com.leap.mars.widget.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:contentDescription="@null"
                android:src="@mipmap/ac6"/>
        </LinearLayout>

    </LinearLayout>
</layout>