<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.leap.mars.config.PrecisionConfig.User"/>

        <variable
            name="presenter"
            type="com.leap.mars.presenter.auth.LoginActivity.Presenter"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/immersion_bar"
            style="@style/immersion_bar_white_style"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:scaleType="fitXY"
            android:background="@mipmap/img_success"
            android:contentDescription="@null"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <ImageView
                    android:id="@+id/mobile_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_mobile_select"/>


                <com.leap.mini.widget.cleartextfield.ClearEditText
                    android:id="@+id/mobile_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/mobile_iv"
                    android:layout_toRightOf="@+id/mobile_iv"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/login_phone_hint"
                    android:inputType="phone"
                    android:maxLength="@{User.mobile}"
                    android:maxLines="1"
                    android:textColor="@color/charcoalGrey"
                    android:textColorHint="@color/silver"
                    android:textSize="@dimen/title"/>

                <View
                    android:id="@+id/mobile_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_line_select"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/password_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/visible_iv"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_password_select"/>

                <com.leap.mini.widget.cleartextfield.ClearEditText
                    android:id="@+id/password_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/password_iv"
                    android:layout_toLeftOf="@+id/visible_iv"
                    android:layout_toRightOf="@+id/password_iv"
                    android:layout_toStartOf="@+id/visible_iv"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:hint="@string/login_password_hint"
                    android:inputType="textPassword"
                    android:maxLength="@{User.password}"
                    android:maxLines="1"
                    android:textColor="@color/charcoalGrey"
                    android:textColorHint="@color/silver"
                    android:textSize="@dimen/title"/>

                <ImageView
                    android:id="@+id/visible_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"
                    android:focusable="true"
                    android:onClick="@{()->presenter.onVisible()}"
                    android:paddingLeft="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_eyes_select"/>

                <View
                    android:id="@+id/password_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_line_select"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{()->presenter.onPassword()}"
                    android:text="@string/login_forget_password"
                    android:textColor="@color/steel"
                    android:textSize="@dimen/text"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:onClick="@{()->presenter.onRegister()}"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_register"
                        android:textColor="@color/redPink"
                        android:textSize="@dimen/text"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_margin="15dp">

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_btn_login"
                android:enabled="false"
                android:gravity="center"
                android:onClick="@{()->presenter.onLogin()}"
                android:text="@string/login"
                android:textColor="@color/white"
                android:textSize="@dimen/huge_text"/>
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>

    </LinearLayout>
</layout>