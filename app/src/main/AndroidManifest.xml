<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leap.mars">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".presenter.auth.app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/check_box_selected"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MainTheme">
        <activity android:name=".presenter.auth.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presenter.auth.activity.MainActivity" />
        <activity android:name=".presenter.auth.activity.NavigationActivity" />
        <activity android:name=".presenter.auth.activity.TextChatActivity" />
        <activity android:name=".presenter.auth.activity.VoiceChatActivity" />
        <activity android:name=".presenter.auth.activity.ControlActivity" />
        <activity android:name=".presenter.auth.activity.PersonalActivity" />
        <activity android:name=".presenter.auth.activity.RobotActivity" />

        <service android:name=".presenter.auth.service.RobotService" />
    </application>

</manifest>