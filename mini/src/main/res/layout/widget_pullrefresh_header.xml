<com.leap.mini.widget.pullrefresh.DefaultHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/refresh_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="8dp"
        android:text="@string/load_data"
        android:textColor="@color/text_black"
        android:textSize="15dp" />

    <ProgressBar
        android:id="@+id/refresh_pb"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@id/refresh_tv"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/progressbar_circle_theme" />
</com.leap.mini.widget.pullrefresh.DefaultHeaderView>