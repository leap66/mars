<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 没有焦点时字体颜色 非选中时的字体颜色 -->
    <item android:color="@color/text_grey" android:state_pressed="false" android:state_selected="false" />
    <!-- 非触摸模式下获得焦点并单击时的字体颜色 -->
    <item android:color="@color/theme_blue" android:state_pressed="true" />
    <!--  选中时的字体颜色 -->
    <item android:color="@color/theme_blue" android:state_selected="true" />
</selector>